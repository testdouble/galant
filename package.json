{
  "name": "galant",
  "version": "0.1.0",
  "description": "Whimsical community-building for remote organizations.",
  "main": "bin/server",
  "scripts": {
    "lint:client": "standard --fix pages/**/*.js",
    "lint:server": "standard --fix lib/**/*.js bin/*",
    "prestart": "npm run lint:server",
    "start": "node .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:client": "find pages | entr -rc npm run lint:client",
    "watch:server": "find bin lib | entr -rc npm run start"
  },
  "private": true,
  "devDependencies": {
    "standard": "~10.0.3"
  },
  "dependencies": {
    "express": "~4.15.5",
    "next": "~3.2.2",
    "react": "~15.6.2",
    "react-dom": "~15.6.2",
    "simplewebrtc": "~3.0.1"
  }
}
